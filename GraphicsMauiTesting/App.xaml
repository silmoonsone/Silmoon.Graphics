<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:sconvert="clr-namespace:Silmoon.Maui.Converters;assembly=Silmoon.Maui"
             xmlns:local="clr-namespace:GraphicsMauiTesting"
             x:Class="GraphicsMauiTesting.App">
    <Application.Resources>
        <ResourceDictionary>
            <sconvert:StreamToImageSourceConvert x:Key="StreamToImageSourceConverter"></sconvert:StreamToImageSourceConvert>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
